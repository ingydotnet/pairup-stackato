#!/bin/bash -e

if [[ -n "$1" ]]; then
    list="${PAIRUP_APT_GET}_$1"
else
    list=$PAIRUP_APT_GET
fi

if [ -n "$list" ]; then
    sudo apt-get -y update
    echo $list | \
        xargs sudo apt-get -y install -o Dpkg::Options::="--force-confold"
else
    echo "'PAIRUP_APT_GET(_$1)' variable is not defined"
fi
