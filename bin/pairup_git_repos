#!/bin/bash -e

if [[ -n "$1" ]]; then
    list="${PAIRUP_GIT_REPOS}_$1"
else
    list=$PAIRUP_GIT_REPOS
fi

list=$PAIRUP_GIT_REPOS
[[ -n "$1" ]] && list="${list}_$1"

if [[ -n "$list" ]]; then
    (
        mkdir -p ~/src
        cd ~/src
        for repo in $list; do
            git clone $repo || true
        done
    )
else
    echo "'PAIRUP_GIT_REPOS(_$1)' variable is not defined"
fi
